{
  "name": "123loadboard",
  "version": "1.0.0",
  "description": "123Loadboard API",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "node main.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "puppeteer": "^24.14.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "puppeteer": {
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-accelerated-2d-canvas",
      "--no-first-run",
      "--no-zygote",
      "--single-process",
      "--disable-gpu"
    ]
  }
}
